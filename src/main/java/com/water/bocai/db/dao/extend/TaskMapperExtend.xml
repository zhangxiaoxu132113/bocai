<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.water.bocai.db.dao.extend.TaskMapperExtend">
    <!--扩展方法-->
    <select id="getTaskList" parameterType="java.util.Map" resultType="com.water.bocai.utils.web.dto.ResultDto">
        <!--SELECT * FROM task WHERE-->
        <!--1=1-->
        <!--<if test="model != null">-->
        <!--<if test="model.id != ''">-->
        <!--AND id = #{model.id}-->
        <!--</if>-->

        <!--</if>-->
        <!--ORDER BY create_on-->
        <!--<if test="page != null">-->
        <!--<if test="page.beginIndex != null and page.pageSize != null and page.pageSize > 0">-->
        <!--LIMIT #{page.beginIndex},#{page.pageSize}-->
        <!--</if>-->
        <!--</if>-->
        SELECT
        t1.id,
        t1.`name`,
        t1.`status`,
        t2.sum,
        t2.total,
        t2.money_in,
        t2.money_out,
        t2.agency_fee,
        t2.package_num,
        t2.profit,
        t2.red1,
        t2.red2,
        t2.red3,
        t2.red4,
        t2.red5,
        t2.red6
        FROM
        `task` AS t1
        LEFT JOIN result AS t2 ON t2.task_id = t1.id WHERE 1=1
        <if test="model != null">
            <if test="model.id != ''">
                AND id = #{model.id}
            </if>
        </if>
        ORDER BY create_on
        <if test="page != null">
            <if test="page.beginIndex != null and page.pageSize != null and page.pageSize > 0">
                LIMIT #{page.beginIndex},#{page.pageSize}
            </if>
        </if>
    </select>

    <select id="countTaskList" parameterType="java.util.Map" resultType="java.lang.Integer">
        SELECT COUNT(1) FROM task
        WHERE 1=1
        <if test="model != null">
            <if test="model.id != ''">
                AND id = #{model.id}
            </if>
        </if>
    </select>
</mapper>