<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.water.bocai.db.dao.extend.UserMapperExtend">
    <!--扩展方法-->
    <select id="getUserList" parameterType="java.util.Map" resultType="com.water.bocai.utils.web.dto.UserDto">
        SELECT * FROM user WHERE 1=1
        <if test="model != null">
            <if test="model.nickName != null and model.nickName != ''">
                AND nickName LIKE '%#{model.nickName}%'
            </if>
        </if>
        <if test="page != null">
            <if test="page.beginIndex != null and page.pageSize != null and page.pageSize > 0">
                LIMIT #{page.beginIndex},#{page.pageSize}
            </if>
        </if>
    </select>

    <select id="countTaskList" parameterType="java.util.Map" resultType="java.lang.Integer">
        SELECT COUNT(1) FROM user
        WHERE 1=1
        <if test="model != null">
            <if test="model.nickName != null and model.nickName != ''">
                AND nickName LIKE '%#{model.nickName}%'
            </if>
        </if>
    </select>


    <select id="getTaskUserList" parameterType="java.util.Map" resultType="com.water.bocai.utils.web.dto.TaskUserDto">
        SELECT
            DATE_FORMAT(create_on, '%Y-%m-%d') AS time,
            SUM(bonus) as 'totalProfit',
            SUM(sum) as 'totalMoney',
            AVG(sum) as 'avgMoney'
        FROM
            task_user
        WHERE 1=1
        <if test="model != null">
            AND user_id = #{model.userId}
        </if>
        <if test="startTime != null and endTime != null">
            <if test="startTime != '' and endTime != ''">
                AND task.create_on BETWEEN #{startTime}
                AND date_add(#{endTime}, INTERVAL 1 DAY)
            </if>
        </if>
        GROUP BY time
        LIMIT #{page.beginIndex},#{page.pageSize}
    </select>

    <select id="countTaskUserList" parameterType="java.util.Map" resultType="java.lang.Integer">
        SELECT COUNT(1) FROM task_user
        WHERE 1=1
        <if test="model != null">
            <if test="model.taskId != ''">
                AND task_id = #{model.taskId}
            </if>
            <if test="model.searchType != -1">
                <choose>
                    <when test="model.searchType == 0">
                        <if test="model.searchValue != null and model.searchValue != ''">
                            AND user_id ${model.userId}
                        </if>
                    </when>
                    <when test="model.searchType == 1">
                        <if test="model.searchValue != null and model.searchValue != ''">
                            AND num=#{model.num}
                        </if>
                    </when>
                </choose>
            </if>
        </if>
    </select>
</mapper>