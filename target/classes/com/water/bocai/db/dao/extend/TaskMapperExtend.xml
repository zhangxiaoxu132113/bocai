<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.water.bocai.db.dao.extend.TaskMapperExtend">
    <!--扩展方法-->
    <select id="getTaskList" parameterType="java.util.Map" resultType="com.water.bocai.utils.web.dto.TaskDto">
        SELECT * FROM task WHERE
        1=1
        <if test="model != null">
            <if test="model.id != ''">
                AND id = #{model.id}
            </if>

        </if>
        ORDER BY create_on
        <if test="page != null">
            <if test="page.beginIndex != null and page.pageSize != null and page.pageSize > 0">
                LIMIT #{page.beginIndex},#{page.pageSize}
            </if>
        </if>
    </select>

    <select id="countTaskList" parameterType="java.util.Map" resultType="java.lang.Integer">
        SELECT COUNT(1) FROM task
        WHERE 1=1
        <if test="model != null">
            <if test="model.id != ''">
                AND id = #{model.id}
            </if>
        </if>
    </select>
</mapper>